{
  "compilerOptions": {
    "target": "ES6",

    "module": "CommonJS",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "baseUrl": "src",
    "declaration": true,
    "outDir": "dist",

    "paths": {
      "@/*": ["*"],
      "@defaults/*": ["defaults/*"],
      "@others/*": ["others/*"]
    }
  }
}
